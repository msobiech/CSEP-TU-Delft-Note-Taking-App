<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.kordamp.ikonli.javafx.*?>

<AnchorPane prefHeight="295.0" prefWidth="473.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controllers.EditCollectionsPopUpCtrl" >
   <children>
      <HBox layoutY="-1.0" prefHeight="42.0" prefWidth="474.0" fx:id="headerBox">
         <children>
            <Label alignment="CENTER" prefHeight="42.0" prefWidth="459.0" text="Edit Collections" fx:id="headerLabel">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox layoutY="41.0" prefHeight="254.0" prefWidth="473.0" spacing="20.0" fx:id="mainContentBox">
         <children>
            <VBox prefHeight="265.0" prefWidth="110.0" spacing="5.0" fx:id="leftPane">
               <children>
                  <ListView fx:id="collectionListView" prefHeight="273.0" prefWidth="102.0" />
                  <HBox alignment="CENTER" prefHeight="28.0" prefWidth="102.0" spacing="5.0" fx:id="buttonContainer">
                     <children>
                        <Button fx:id="addCollectionButton" mnemonicParsing="false" onAction="#addCollection">
                           <graphic>
                              <FontIcon iconLiteral="fa-plus" />
                           </graphic>
                        </Button>
                        <Button fx:id="deleteCollectionButton" mnemonicParsing="false" onAction="#deleteCollection">
                           <graphic>
                              <FontIcon iconLiteral="fa-minus" />
                           </graphic>
                        </Button>
                        <Button fx:id="refreshCollectionsButton" mnemonicParsing="false" onAction="#refreshCollections">
                           <graphic>
                              <FontIcon iconLiteral="fa-rotate-right" />
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox prefHeight="254.0" prefWidth="344.0" fx:id="rightPane">
               <children>
                  <HBox prefHeight="90.0" prefWidth="344.0" />
                  <HBox prefHeight="100.0" prefWidth="344.0" spacing="50.0">
                     <children>
                        <Label alignment="TOP_LEFT" prefHeight="26.0" prefWidth="31.0" text="Title:" fx:id="titleLabel">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="collectionTitleField" onKeyTyped="#checkCollectionStatus" prefHeight="26.0" prefWidth="238.0" />
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="344.0" spacing="41.0">
                     <children>
                        <Label text="Server:" fx:id="serverLabel">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="collectionServerField" prefHeight="26.0" prefWidth="238.0" />
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="344.0" spacing="21.0">
                     <children>
                        <Label text="Collection:" fx:id="collectionLabel">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="userFriendlyNameField" prefHeight="26.0" prefWidth="238.0" />
                     </children>
                  </HBox>
                  <HBox prefHeight="29.0" prefWidth="344.0" spacing="42.0" fx:id="statusBox">
                     <children>
                        <Label text="Status:" fx:id="statusLabelText">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <Label fx:id="statusLabel" text="Waiting for input..." />
                     </children>
                  </HBox>
                  <HBox alignment="BOTTOM_RIGHT" prefHeight="116.0" prefWidth="344.0">
                     <children>
                        <Button fx:id="makeDefaultButton" alignment="BOTTOM_RIGHT" mnemonicParsing="false" text="Make Default" translateX="-20.0" translateY="-8.0" />
                        <Button fx:id="SaveCollectionButton" alignment="BOTTOM_RIGHT" mnemonicParsing="false" text="Save" translateX="-10.0" translateY="-8.0" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
